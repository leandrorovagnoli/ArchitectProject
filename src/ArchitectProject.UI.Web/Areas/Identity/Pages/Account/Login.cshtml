@page
@model LoginModel

@{
    ViewData["Title"] = "Admin Panel";
}

    <div class="login-box-body">
        <p class="login-box-msg text-danger">@Model.ErrorMessage</p>

        <form id="account" method="post">
            <div class="form-group has-feedback">
                <input asp-for="Input.UserName" type="text" class="form-control" placeholder="Usuário" />
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Senha" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" type="checkbox">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        @*<a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>*@<br>
        @*<a asp-page="./Register" class="text-center" asp-route-returnUrl="@Model.ReturnUrl">Criar nova conta</a>*@

    </div>
