@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="login-box-body">
    <p class="login-box-msg"></p>
    <form method="post">
        <div class="form-group has-feedback">
            <input asp-for="Input.Name" type="text" class="form-control" placeholder="Nome completo">
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Senha">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Repita a senha">
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="form-group has-feedback">
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input asp-for="Input.IsAgree" type="checkbox"> Eu concordo com os <a href="#">termos.</a>
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Registrar</button>
                </div>
                <!-- /.col -->
            </div>
            <span asp-validation-for="Input.IsAgree" class="text-danger"></span>
        </div>
    </form>
</div>